{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Eto.DevExtension.VisualStudio.Mac",
            "type": "mono",
            "request": "launch",
            "preLaunchTask": "build-extension-2019",
            "program": ".",
            "runtimeExecutable": "/Applications/Visual Studio.app/Contents/MacOS/VisualStudio",
            "passDebugOptionsViaEnvironmentVariable": true,
            "args": [
                "--no-redirect"
            ],
            "env": {
                "MONODEVELOP_CONSOLE_LOG_LEVEL": "All",
                "MONODEVELOP_DEV_ADDINS": "${workspaceFolder}/artifacts/${config:var.configuration}/VisualStudio.Mac/net472/"
            }
        },
        {
            "name": "Eto.DevExtension.VisualStudio.Mac (Preview)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-extension-2022",
            "program": "/Applications/Visual Studio (Preview).app/Contents/MacOS/VisualStudio",
            "args": [
                "--no-redirect"
            ],
            "env": {
                "MONODEVELOP_CONSOLE_LOG_LEVEL": "All",
                "MONODEVELOP_DEV_ADDINS": "${workspaceFolder}/artifacts/${config:var.configuration}/VisualStudio.Mac/net6.0/"
            }
        },
        {
            // note you cannot actually debug as omnisharp only supports x64, this is used so we can just run without debugging more easily
            "name": "Eto.DevExtension.VisualStudio.Windows",
            "type": "clr",
            "request": "launch",
            "preLaunchTask": "build-extension",
            "program": "C:/Program Files (x86)/Microsoft Visual Studio/2019/Professional/Common7/IDE/devenv.exe",
            "args": [
                "/RootSuffix",
                "Exp"
            ],
        }
    ],
    "compounds": []
}